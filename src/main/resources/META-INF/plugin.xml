<idea-plugin>
    <id>net.rentalhost.plugins.laravel.hammer</id>
    <name>ðŸ”¨ Laravel Hammer</name>
    <version>0.1.0</version>

    <vendor email="david.rodrigues@rentalhost.net">Rentalhost</vendor>

    <idea-version since-build="221" until-build="222.*" />

    <description><![CDATA[
        <strong>ðŸ”¨ Laravel Hammer</strong> is a plugin that adds <a href="https://github.com/hammer-tools/laravel-hammer/wiki/Inspections"><strong>1 new
    inspections</strong></a> to the Laravel framework, including dependencies like Eloquent and Blade, which are not available in PhpStorm natively, including support for quick-fixes.<br /><br />

<strong>Important:</strong> this plugin is at a very early stage of development and therefore has very few of the intended features.<br /><br />

You can also try the <a href="https://plugins.jetbrains.com/plugin/19515--php-hammer/"><strong>ðŸ”¨ PHP Hammer</strong></a> sister plugin.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>
    <depends>com.jetbrains.php.blade</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Eloquent -->
        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ Laravel Hammer"
                         groupName="Eloquent"
                         enabledByDefault="true"
                         displayName="Query Scope declaration: Builder parameter"
                         level="WEAK WARNING"
                         shortName="ScopeDefinitionBuilderParameterInspection"
                         implementationClass="net.rentalhost.plugins.laravel.hammer.inspections.eloquent.ScopeDefinitionBuilderParameterInspection" />

        <!-- Plugin -->
        <applicationService serviceImplementation="net.rentalhost.plugins.laravel.hammer.services.SettingsService" />

        <notificationGroup id="net.rentalhost.plugins.notification.INSTALLED" displayType="STICKY_BALLOON" />
        <notificationGroup id="net.rentalhost.plugins.notification.UPDATED" displayType="STICKY_BALLOON" />
        <notificationGroup id="net.rentalhost.plugins.notification.REVIEW" displayType="STICKY_BALLOON" />

        <errorHandler implementation="net.rentalhost.plugins.laravel.hammer.services.ExceptionService" />

        <toolWindow id="Laravel Hammer" icon="/META-INF/pluginIcon.png" anchor="right"
                    factoryClass="net.rentalhost.plugins.laravel.hammer.services.SidebarService" />
    </extensions>

    <applicationListeners>
        <listener activeInHeadlessMode="false"
                  class="net.rentalhost.plugins.laravel.hammer.services.PluginUpdateService"
                  topic="com.intellij.openapi.project.ProjectManagerListener" />
    </applicationListeners>
</idea-plugin>
